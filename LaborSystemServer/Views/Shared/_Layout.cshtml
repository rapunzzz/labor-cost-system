<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LaborSystemServer</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LaborSystemServer.styles.css" asp-append-version="true" />
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <a href="/" class="sidebar-brand">
                    <i class="fas fa-industry"></i>
                    Production System
                </a>
            </div>
            
            <div class="sidebar-nav">
                <!-- Dashboard Section -->

                <div class="nav-section">
                    <div class="nav-section-title">Production Planning</div>
                    <a href="/" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")">
                        <i class="fas fa-clipboard-list"></i>
                        Upload & Planning
                    </a>
                </div>        

                <!-- Configuration Section -->
                <div class="nav-section">
                    <div class="nav-section-title">Configuration</div>
                    <a href="/ShiftConfiguration" class="nav-link nav-submenu-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "ShiftConfiguration" ? "active" : "")">
                        <i class="fas fa-clock"></i>
                        Shift Configuration
                    </a>

                    <a href="/ModelSut" class="nav-link nav-submenu-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "ModelSut" ? "active" : "")">
                        <i class="fas fa-gears"></i>
                        Model SUT
                    </a>

                </div>
            </div>
        </nav>
    </header>
    <div class="main-content">
        <div class="container-fluid">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - LaborSystemServer - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>