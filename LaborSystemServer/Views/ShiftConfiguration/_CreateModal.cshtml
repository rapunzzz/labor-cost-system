<!-- Create Modal Component -->
<div class="modal fade" id="createModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">
                    <i class="fas fa-plus-circle"></i> Create New Shift Configuration
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    @if (!string.IsNullOrEmpty(ViewBag.Error as string))
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle"></i> @ViewBag.Error
                        </div>
                    }

                    <div class="mb-3">
                        <label for="WorkType" class="form-label">Work Type</label>
                        <select name="WorkType" id="WorkType" class="form-select" required>
                            <option value="">-- Select Work Type --</option>
                            @if (ViewBag.WorkTypes != null)
                            {
                                @foreach (var workType in ViewBag.WorkTypes as IEnumerable<ProductionPlanning.Models.WorkType>)
                                {
                                    <option value="@((int)workType)">@workType.ToString()</option>
                                }
                            }
                        </select>
                        <div class="form-text">
                            <i class="fas fa-info-circle"></i> Select the type of work shift
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="StartTime" class="form-label">Start Time</label>
                            <input name="StartTime" id="StartTime" type="time" class="form-control" required />
                            <div class="form-text">When does the shift start?</div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label for="EndTime" class="form-label">End Time</label>
                            <input name="EndTime" id="EndTime" type="time" class="form-control" required />
                            <div class="form-text">When does the shift end?</div>
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <i class="fas fa-lightbulb"></i> <strong>Note:</strong>
                        <ul class="mb-0 mt-2">
                            <li>After creating the shift configuration, you can add time deductions (breaks, preparation, etc.)</li>
                            <li>For NonShift and Shift1, Friday prayer deduction (40 minutes) will be automatically applied</li>
                        </ul>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times"></i> Cancel
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Create Configuration
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>