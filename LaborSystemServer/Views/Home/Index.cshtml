
@{
    ViewData["Title"] = "Upload Excel & Worker Planning";
}
<div class="container mt-4">
    <h2 class="mb-4">Upload Excel & Production Planning with Worker Optimization</h2>

    @if(!string.IsNullOrEmpty(ViewBag.Error as string))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error!</strong> @ViewBag.Error
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if(!string.IsNullOrEmpty(ViewBag.Success as string))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Success!</strong> @ViewBag.Success
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Upload Form -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-upload"></i> Upload Excel File</h5>
        </div>
        <div class="card-body">
            <form asp-action="UploadExcel" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label for="month" class="form-label">Bulan</label>
                        <select name="month" id="month" class="form-select" required>
                            <option value="">-- Pilih Bulan --</option>
                            <option value="1">Jan</option>
                            <option value="2">Feb</option>
                            <option value="3">Mar</option>
                            <option value="4">Apr</option>
                            <option value="5">Mei</option>
                            <option value="6">Jun</option>
                            <option value="7">Jul</option>
                            <option value="8">Aug</option>
                            <option value="9">Sep</option>
                            <option value="10">Okt</option>
                            <option value="11">Nov</option>
                            <option value="12">Dec</option>
                        </select>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label for="year" class="form-label">Tahun</label>
                        <input type="number" name="year" id="year" class="form-control" 
                               min="2000" max="2100" value="@DateTime.Now.Year" required />
                    </div>

                    <div class="col-md-4 mb-3">
                        <label for="file" class="form-label">File Excel</label>
                        <input type="file" name="file" id="file" 
                               class="form-control" accept=".xlsx,.xls" required />
                        <div class="form-text">Pilih file Excel (.xlsx atau .xls)</div>
                    </div>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-cloud-upload-alt"></i> Upload & Generate Production Plan
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Excel Results Section - Updated for Multi-Shift -->
    @if(ViewBag.Results != null)
    {
        var results = ViewBag.Results.Data as List<ProductionPlanning.Models.ModelData>;
        var hariKerja = ViewBag.Results.HariKerja;
        
        // Calculate both NonShift and Multi-shift capacities
        var shiftCapacities = ViewBag.ShiftCapacities as Dictionary<ProductionPlanning.Models.WorkType, double>;
        double nonShiftRegularHours = shiftCapacities[ProductionPlanning.Models.WorkType.NonShift];
        double shift1Hours = shiftCapacities[ProductionPlanning.Models.WorkType.Shift1];
        double shift2Hours = shiftCapacities[ProductionPlanning.Models.WorkType.Shift2];
        double shift3Hours = shiftCapacities[ProductionPlanning.Models.WorkType.Shift3];

        double totalHoursPerLineAllShifts = shift1Hours + shift2Hours + shift3Hours;
        double totalHoursAllLinesAllShifts = totalHoursPerLineAllShifts * ViewBag.LineCount;
        double nonShiftTotalHours = nonShiftRegularHours * ViewBag.LineCount;
        
        double totalDemandHours = results.Sum(r => r.TotalWorkHours);
        double capacityGapNonShift = nonShiftTotalHours - totalDemandHours;
        double capacityGapMultiShift = totalHoursAllLinesAllShifts - totalDemandHours;

        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-table"></i> Hasil Upload Excel - @ViewBag.Results.Month.ToString("D2")/@ViewBag.Results.Year</h5>
            </div>
            <div class="card-body">
                @if(ViewBag.ShiftConfigurations != null)
                {
                    <partial name="_TimelineShift" />
                }
                
                <div class="table-responsive mt-5">
                    <table class="table table-bordered table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>No</th>
                                <th>Model Name</th>
                                <th>Quantity</th>
                                <th>SUT (Seconds)</th>
                                <th>Quantity x SUT (Hours)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{int counter = 1;}
                            @foreach(var item in results)
                            {
                                <tr>
                                    <td>@counter</td>
                                    <td><strong>@item.ModelName</strong></td>
                                    <td class="text-end">@item.Quantity.ToString("N0")</td>
                                    <td class="text-end">@item.ModelReference.SUT.ToString("N2")</td>
                                    <td class="text-end">@item.TotalWorkHours.ToString("N2")</td>
                                </tr>
                                counter++;
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="2"class="text-start"><strong>Total</strong></td>
                                <td class="text-end"> <strong>@results.Sum(r => r.Quantity).ToString("N0")</strong></td>
                                <td class="text-end"> <strong>@results.Sum(r => r.ModelReference.SUT).ToString("N2")</strong></td>
                                <td class="text-end"><strong>@totalDemandHours.ToString("N2")</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>

            </div>

            <div class="row g-4 mb-4">
                <div class="col-md-6 col-lg-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-success text-white border-0 py-3">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-clock me-2 fs-5"></i>
                                <h6 class="mb-0 fw-semibold">NonShift</h6>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-6">
                                    <small class="text-muted d-block mb-1">Available</small>
                                    <h4 class="mb-0 text-success fw-bold">@nonShiftRegularHours.ToString("N2")</h4>
                                    <small class="text-muted">hours</small>
                                </div>
                                <div class="col-6 text-end">
                                    <small class="text-muted d-block mb-1">Demand</small>
                                    <h4 class="mb-0 fw-semibold">@totalDemandHours.ToString("N2")</h4>
                                    <small class="text-muted">hours</small>
                                </div>
                            </div>
                            <hr class="my-3">
                            <div class="text-center">
                                <small class="text-muted d-block mb-2">Working Days</small>
                                <div class="d-flex justify-content-center gap-3">
                                    <div class="px-3 py-2 bg-light rounded">
                                        <div class="fw-bold text-success fs-5">@hariKerja.TotalSeninKamis</div>
                                        <small class="text-muted">Mon-Thu</small>
                                    </div>
                                    <div class="px-3 py-2 bg-light rounded">
                                        <div class="fw-bold text-success fs-5">@hariKerja.TotalJumat</div>
                                        <small class="text-muted">Friday</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-primary text-white border-0 py-3">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-sun me-2 fs-5"></i>
                                <h6 class="mb-0 fw-semibold">Shift 1</h6>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-6">
                                    <small class="text-muted d-block mb-1">Available</small>
                                    <h4 class="mb-0 text-primary fw-bold">@shift1Hours.ToString("N2")</h4>
                                    <small class="text-muted">hours</small>
                                </div>
                                <div class="col-6 text-end">
                                    <small class="text-muted d-block mb-1">Demand</small>
                                    <h4 class="mb-0 fw-semibold">@totalDemandHours.ToString("N2")</h4>
                                    <small class="text-muted">hours</small>
                                </div>
                            </div>
                            <hr class="my-3">
                            <div class="text-center">
                                <small class="text-muted d-block mb-2">Working Days</small>
                                <div class="d-flex justify-content-center gap-3">
                                    <div class="px-3 py-2 bg-light rounded">
                                        <div class="fw-bold text-primary fs-5">@hariKerja.TotalSeninKamis</div>
                                        <small class="text-muted">Mon-Thu</small>
                                    </div>
                                    <div class="px-3 py-2 bg-light rounded">
                                        <div class="fw-bold text-primary fs-5">@hariKerja.TotalJumat</div>
                                        <small class="text-muted">Friday</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-warning text-white border-0 py-3">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-cloud-sun me-2 fs-5"></i>
                                <h6 class="mb-0 fw-semibold">Shift 2</h6>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-6">
                                    <small class="text-muted d-block mb-1">Available</small>
                                    <h4 class="mb-0 text-warning fw-bold">@shift2Hours.ToString("N2")</h4>
                                    <small class="text-muted">hours</small>
                                </div>
                                <div class="col-6 text-end">
                                    <small class="text-muted d-block mb-1">Demand</small>
                                    <h4 class="mb-0 fw-semibold">@totalDemandHours.ToString("N2")</h4>
                                    <small class="text-muted">hours</small>
                                </div>
                            </div>
                            <hr class="my-3">
                            <div class="text-center">
                                <small class="text-muted d-block mb-2">Working Days</small>
                                <div class="px-4 py-2 bg-light rounded d-inline-block">
                                    <div class="fw-bold text-warning fs-4">@(hariKerja.TotalSeninKamis + hariKerja.TotalJumat)</div>
                                    <small class="text-muted">Mon - Fri</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-dark text-white border-0 py-3">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-moon me-2 fs-5"></i>
                                <h6 class="mb-0 fw-semibold">Shift 3</h6>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-6">
                                    <small class="text-muted d-block mb-1">Available</small>
                                    <h4 class="mb-0 text-dark fw-bold">@shift3Hours.ToString("N2")</h4>
                                    <small class="text-muted">hours</small>
                                </div>
                                <div class="col-6 text-end">
                                    <small class="text-muted d-block mb-1">Demand</small>
                                    <h4 class="mb-0 fw-semibold">@totalDemandHours.ToString("N2")</h4>
                                    <small class="text-muted">hours</small>
                                </div>
                            </div>
                            <hr class="my-3">
                            <div class="text-center">
                                <small class="text-muted d-block mb-2">Working Days</small>
                                <div class="px-4 py-2 bg-light rounded d-inline-block">
                                    <div class="fw-bold text-dark fs-4">@(hariKerja.TotalSeninKamis + hariKerja.TotalJumat)</div>
                                    <small class="text-muted">Mon - Fri</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    }

    

</div>


<style>
    .card {
        border: none;
        border-radius: 10px;
    }
    
    .table th {
        border-top: none;
        font-weight: 600;
    }
    
    .badge {
        font-size: 0.75em;
    }
    
    .progress {
        border-radius: 15px;
    }
    
    .alert {
        border-radius: 10px;
    }

    .border-left-primary {
        border-left: 4px solid #007bff !important;
    }

    .fs-6 {
        font-size: 0.875rem;
    }
</style>